{
    "manifest_version": 3,
    "name": "ChatGPT Microphone",
    "version": "1.5.2",
    "description": "Add voice-to-text and shortcut snippets to ChatGPT.",
    "icons": {
        "512": "/assets/icon512.png"
    },
    "content_scripts": [
        {
            "matches": [
                "*://chat.openai.com/*",
                "*://chatgpt.com/*"
            ],
            "js": [
                "contentScript.js"
            ]
        }
    ],
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "/menu/menu.html",
        "default_icon": {
            "512": "/assets/icon512.png"
        }
    },
    "background": {
        "service_worker": "background.js"
    }
}